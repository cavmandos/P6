{% extends 'base.html.twig' %}

{% block container %}

<div id="forgot-page" class="d-flex flex-column justify-content-center">

    <div class="text-center">
        <img src="/pictures/question-logo.png" alt="Mot de passe oublié ?" height="60px">
    </div>
    <h1 class="text-center">Mot de passe oublié</h1>
    <p class="text-center">Alors ? On a un petit trou de mémoire ?</p>
    <div class="row justify-content-center">
    <form class="col-11 col-md-8 col-lg-4 my-3" method="post" action="{{ path('app_forgot') }}">
        <div class="form-group">
            <label for="username">Votre pseudo</label>
            <input type="text" id="username" name="_username" class="form-control mb-4" required />
        </div>

        <p class="text-center">
            <button type="submit" class="btn btn-primary">Envoyer le mail</button>
        </p>
    </form>
    </div>

</div>

{% endblock %}